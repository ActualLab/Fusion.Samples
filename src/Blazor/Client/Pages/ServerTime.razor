@page "/serverTime"
@inherits LiveComponentBase<ServerTimeState>

@{
    var updateError = LiveState.UpdateError;
}

<h1>Server Time</h1>

<p>Server Time: @(State.Time.Format())</p>

@if (updateError != null) {
    <div class="alert alert-warning" role="alert">
        Update error: @updateError.Message
    </div>
}

<button class="btn btn-primary" @onclick="() => Invalidate()">Refresh</button>
