@inherits GamePlayBase

<Paragraph>
    Players: <GameUsersBadge Users="@OrderedUsers" />
</Paragraph>

@if (GameState.IsGameEnded) {
    <Paragraph>
        <GameEndMessage Message="@GameState.GameEndMessage" OrderedUsers="@OrderedUsers"/>
    </Paragraph>
}

<MatchingComponentFor
    Source="@GameEngine" SourceParameterName="GameEngine" Scope="@ComponentScopes.GamePlay"
    Model="@Model" />
