@using RenderFragment = Microsoft.AspNetCore.Components.RenderFragment
<Bar
    Breakpoint="Breakpoint.Desktop"
    Padding="Padding.Is1.Is3.FromRight"
    Background="Background.Light"
    ThemeContrast="ThemeContrast.Light">
    <BarBrand>
        <BarLink Title="Home" To="/" Match="@Match.All" Class="link-unstyled">Blazorise Template</BarLink>
    </BarBrand>
    <BarMenu>
        <BarStart>
            @*
            <BarItem>
                @Link(IconName.Microphone, "Transcribe", "/", Match.All)
            </BarItem>
            <BarItem>
                @Link(IconName.List, "Active Transcriptions", "/active", Match.All)
            </BarItem>
            *@
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarBlazorModeSwitch/>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>

@code {
    private RenderFragment Link(object icon, string title, string href, Match match = Match.Prefix)
    {
        var target = href.StartsWith("http://") || href.StartsWith("https://") ? "_blank" : "";
        return @<BarItem>
                   <BarLink Title="@title" To="@href" Match="@match"><BarIcon IconName="icon"></BarIcon> @title</BarLink>
               </BarItem>;
    }
}
